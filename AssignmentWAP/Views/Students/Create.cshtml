@model AssignmentWAP.Models.Student

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Mã sinh viên", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaSinhVien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaSinhVien, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Hình thức nộp phạt", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.HinhThucNopPhat, "Chống Đẩy", new { @id = "hinhthucchongday", @checked = "checked" })Chống Đẩy
            @Html.RadioButtonFor(model => model.HinhThucNopPhat, " Nộp Tiền", new { @id = "hinhthucnoptien" }) Nộp Tiền
        </div>
    </div>

    <div class="form-group" id="noptien">
        @Html.Label("Số tiền nộp phạt", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TienNopPhat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TienNopPhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" id="chongday" style="display: none">
        @Html.Label("Số lần chống đẩy", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ChongDay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ChongDay, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" >
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<script>
    var hinhthucchongday = document.getElementById("hinhthucchongday");
    var hinhthucnoptien = document.getElementById("hinhthucnoptien");
    var noptien = document.getElementById("noptien");
    var chongday = document.getElementById("chongday");
    hinhthucchongday.onclick = function () {
        chongday.style.display = 'block';
        noptien.style.display = 'none';
    };
   
    hinhthucnoptien.onclick = function () {
        chongday.style.display = 'none';
        noptien.style.display = 'block';
    };
</script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
